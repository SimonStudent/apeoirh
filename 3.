namespace _3_
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Skriv in ett tal");
            int tal = int.Parse(Console.ReadLine());

            int siffra = 0;

            for (int i = 1; i <= tal; i++) 
            {
                siffra += i;
            }
            Console.WriteLine(siffra);
        }
    }
}
